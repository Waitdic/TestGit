<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_am_a_programmer.Views.Buttons.PersonalArea"
             Title="PersonalArea">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter your cooperative login and password." 
           HorizontalOptions="Center"
           HeightRequest="45" />
            <Editor
            x:Name="Login"
            Placeholder="Login"
            HeightRequest="50" />
            <Editor
            x:Name="Password"
            Placeholder="Password"
            HeightRequest="55"/>
            <Button
            Text="Enter"
            HeightRequest="60"
            Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>