    <MasterDetailPage.Master>
        <ContentPage Title="Хоба выехал" BackgroundColor="#DCDCDC">
            <ContentPage.Content>
                <StackLayout Padding="5,30,5,30">
                    
                    <!--<Button Text="Лабы по матеше" Clicked="ButtonAll_labsClick"></Button>
                    <Button Text="Твои оценки" Clicked="ButtonMarksClick"></Button>-->

